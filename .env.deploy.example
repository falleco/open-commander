# =============================================================================
# Open Commander — deploy environment template
# Copy to .env.deploy and fill in the values before running:
#   docker compose -f docker-compose.deploy.yml --env-file .env.deploy up -d
# =============================================================================

# -----------------------------------------------------------------------------
# App
# -----------------------------------------------------------------------------

# Public URL the app is reachable at (no trailing slash)
PUBLIC_URL=https://commander.example.com

# Port published on the host (default: 3000)
# PORT=3000

# -----------------------------------------------------------------------------
# Auth — generate with: openssl rand -hex 32
# -----------------------------------------------------------------------------
BETTER_AUTH_SECRET=change-me-to-a-random-64-char-string

# OAuth providers (optional — leave blank to disable)
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# GitHub token forwarded into agent sessions (optional)
# GITHUB_TOKEN=

# -----------------------------------------------------------------------------
# Database (external or via docker-compose.dbs.yml)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://postgres:secret@postgres:5432/commander

# Required when using docker-compose.dbs.yml
POSTGRES_PASSWORD=secret
# POSTGRES_USER=postgres
# POSTGRES_DB=commander

# -----------------------------------------------------------------------------
# Redis (external or via docker-compose.dbs.yml)
# -----------------------------------------------------------------------------
REDIS_HOSTNAME=redis
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_TLS=false

# -----------------------------------------------------------------------------
# Agents (optional customization)
# -----------------------------------------------------------------------------
# To override the agents baked into the image with your own volume, uncomment
# the line below, create a Docker volume with your agent definitions, and also
# uncomment the volume mount in docker-compose.deploy.yml.
# DOCKER_AGENTS_VOLUME=my-custom-agents
